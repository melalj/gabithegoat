<a href="https://www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" target="_blank" class="share-facebook">
  <i class="icon-facebook"></i>
</a>
<a href="https://twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" target="_blank" class="share-twitter">
  <i class="icon-twitter"></i>
</a>
<a href="https://pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" target="_blank" class="share-pinterest">
  <i class="icon-pinterest"></i>
</a>
<a href="fb-messenger://share?link={{ shop.url | append: share_permalink }}" target="_blank" class="share-messenger only-sm">
  <i class="icon-messenger"></i>
</a>
<a href="https://reddit.com/submit?url{{ shop.url | append: share_permalink }}" target="_blank" class="share-reddit hide-sm">
  <i class="icon-reddit"></i>
</a>